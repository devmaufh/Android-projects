<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/Nombre"
            android:ems="10"
            android:id="@+id/ed1" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="100dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/Verde"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn1"
            android:background="@color/colorPrimary"
            android:textColor="#FFF"
            android:onClick="verde"
            app:layout_constraintTop_toBottomOf="@+id/ed1"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" style="@style/Widget.AppCompat.Button.Colored"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/Edad"
            android:ems="10"
            android:id="@+id/ed2"
            app:layout_constraintTop_toBottomOf="@+id/btn1" android:layout_marginTop="40dp"
            android:layout_marginStart="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="100dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/rojo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:onClick="rojo"
            android:id="@+id/button2" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/ed2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" style="@style/Widget.AppCompat.Button.Colored"/>
</androidx.constraintlayout.widget.ConstraintLayout>